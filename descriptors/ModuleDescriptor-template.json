{
  "id": "${artifactId}-${version}",
  "name": "Codex Multiplexer",
  "requires": [],
  "provides": [
    {
      "id": "codex",
      "version": "3.2",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/codex-instances"
        },
        {
          "methods": ["GET"],
          "pathPattern": "/codex-instances/{id}"
        }
      ]
    },
    {
      "id" : "codex-packages",
      "version" : "1.0",
      "interfaceType": "multiple",
      "handlers" : [
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/codex-packages",
          "permissionsRequired" : [ "codex.packages.collection.get" ],
          "modulePermissions": ["configuration.entries.collection.get"]
        }, {
          "methods" : [ "GET" ],
          "pathPattern" : "/codex-packages/{id}",
          "permissionsRequired" : [ "codex.packages.item.get" ],
          "modulePermissions": ["configuration.entries.collection.get"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/codex-packages-sources"
        }
      ]
    },
    {
      "id": "_jsonSchemas",
      "version": "1.0",
      "interfaceType" : "multiple",
      "handlers" : [
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/_/jsonSchemas"
        }
      ]
    },
    {
      "id": "_ramls",
      "version": "1.0",
      "interfaceType" : "multiple",
      "handlers" : [
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/_/ramls"
        }
      ]
    }
  ],
  "permissionSets": [],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerArgs": {
      "HostConfig": { "PortBindings": { "8081/tcp":  [{ "HostPort": "%p" }] } }
    },
    "dockerPull" : false
  }
}
