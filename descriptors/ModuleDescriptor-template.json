{
  "id": "${artifactId}-${version}",
  "name": "Codex Multiplexer",
  "requires": [],
  "provides": [
    {
      "id": "codex",
      "version": "3.3",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/codex-instances"
        },
        {
          "methods": ["GET"],
          "pathPattern": "/codex-instances/{id}"
        },
        {
          "methods": ["GET"],
          "pathPattern": "/codex-instances-sources"
        }
      ]
    },
    {
      "id" : "codex-packages",
      "version" : "1.0",
      "handlers" : [
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/codex-packages"
        }, {
          "methods" : [ "GET" ],
          "pathPattern" : "/codex-packages/{id}"
        }, {
          "methods": ["GET"],
          "pathPattern": "/codex-packages-sources"
        }
      ]
    },
    {
      "id": "_jsonSchemas",
      "version": "1.0",
      "interfaceType" : "multiple",
      "handlers" : [
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/_/jsonSchemas"
        }
      ]
    },
    {
      "id": "_ramls",
      "version": "1.0",
      "interfaceType" : "multiple",
      "handlers" : [
        {
          "methods" : [ "GET" ],
          "pathPattern" : "/_/ramls"
        }
      ]
    }
  ],
  "permissionSets": [],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 357913941,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "JAVA_OPTIONS",
        "value": "-XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap"
      }
    ]
  }
}
